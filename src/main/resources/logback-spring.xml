<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
    <!-- Spring profiles allow for different logging configurations based on the active profile -->
    <springProfile name="default">
        <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} - %msg%n"/>
        <property name="LOG_FILE" value="logs/application.log"/>

        <!-- Console Appender for printing logs to the console -->
        <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <!-- File Appender for writing logs to a file -->
        <appender name="File" class="ch.qos.logback.core.FileAppender">
            <file>${LOG_FILE}</file>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <!-- Loggers with different levels and appenders -->
        <logger name="com.sample.holiday" level="DEBUG" additivity="false">
            <appender-ref ref="Console" />
            <appender-ref ref="File" />
        </logger>

        <!-- Root logger configuration -->
        <root level="INFO">
            <appender-ref ref="Console" />
        </root>
    </springProfile>
</configuration>